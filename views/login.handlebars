<div class="login-box well">
    
					{{#if errors}}

							{{#each errors}}
								<div class="alert alert-danger"> {{msg}} </div>
							{{/each}}
					{{/if}}
                    
                    <form method="post" action="/login">
                        <legend>Sign In</legend>
                        <div class="form-group">
                            <label for="username">Username</label>
                            <input value='' name="username" id="username" placeholder="Username" type="text" class="form-control" required autofocus/>
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" name="password" id="password" value='' placeholder="Password" type="text" class="form-control" required/>
                        </div>
                        <div class="input-group">
                          <div class="checkbox">
                            <label>
                              <input id="login-remember" type="checkbox" name="remember" value="1"> Remember me
                            </label>
                          </div>
                        </div>
                       
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary btn-login-submit btn-block m-t-md" value="Login" />
                             <a class="btn btn-block btn-social btn-google" href="/auth/google">
                            <span class="fa fa-google"></span> Sign in with Google
                        </a>
                        <a class="btn btn-block btn-social btn-facebook" href="/auth/facebook">
                            <span class="fa fa-facebook"></span> Sign in with Facebook
                        </a>
                        <a class="btn btn-block btn-social btn-github" href="/auth/github">
                            <span class="fa fa-github"></span> Sign in with Github
                        </a>
                        </div>
                        <div class="form-group">
                            <p class="text-center m-t-xs text-sm">Do not have an account?</p> 
                            <a href="/register" class="btn btn-default btn-block m-t-md">Create an account</a>
                        </div>
                    </form>
 
                
            </div>